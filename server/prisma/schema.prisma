// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model HydrationLog {
  id        Int      @id @default(autoincrement())
  intake    Int
  timestamp DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  //email    String   @unique
  password String
  // Add other fields as needed
}
